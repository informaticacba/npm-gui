{
  "name": "npm-gui",
  "version": "3.1.1",
  "description": "Graphical tool for managing javascript project dependencies - in a friendly way.",
  "keywords": [
    "gui",
    "npm",
    "yarn",
    "pnpm",
    "view",
    "client",
    "dependencies",
    "node_modules",
    "packages",
    "installer",
    "manager"
  ],
  "eslintIgnore": [
    "eslint-*"
  ],
  "main": "index.js",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "prepack": "npm run build",
    "dev:server": "ts-node-dev --files server/dev.ts",
    "dev:client": "node client/dev.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" ",
    "build:server": "tsc --project tsconfig-build-server.json",
    "build:client": "parcel build client/index.html --no-source-maps",
    "build": "rm -rf dist && npm run build:server && npm run build:client",
    "test:lint:ts": "tsc",
    "test:lint:eslint": "eslint . --ignore-path=.gitignore",
    "test:lint:prettier": "prettier --check . --ignore-path=.gitignore",
    "test:lint": "npm run test:lint:eslint && npm run test:lint:ts",
    "test:unit": "env NODE_TEST=true TS_NODE_FILES=true mocha -r ts-node/register tests/*.test.ts tests/**/*.test.ts --timeout 30000",
    "test": "npm run test:unit && npm run test:lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/q-nick/npm-gui.git"
  },
  "author": "Paweł Stefański",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/q-nick/npm-gui/issues"
  },
  "bin": {
    "npm-gui": "index.js"
  },
  "homepage": "https://github.com/q-nick/npm-gui#readme",
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/cross-spawn": "^6.0.2",
    "@types/mocha": "^8.2.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/request": "^2.48.5",
    "@types/rimraf": "^3.0.0",
    "@types/styled-components": "^5.1.9",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^7.4.2",
    "chai": "^4.3.4",
    "concurrently": "^6.0.2",
    "depcheck": "^1.4.0",
    "mocha": "^8.3.2",
    "open-iconic": "^1.1.1",
    "parcel-bundler": "v1.12.3",
    "parcel-proxy-server": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.3",
    "supertest": "^6.1.3",
    "eslint-config-turbocharge": "^0.1.8",
    "ts-node-dev": "^1.1.6",
    "ws": "^7.4.5"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "open": "^8.0.7",
    "request": "^2.88.2",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 1.0.0"
  }
}
