{
  "name": "npm-gui",
  "version": "3.1.1",
  "description": "Graphical tool for managing javascript project dependencies - in a friendly way.",
  "keywords": [
    "gui",
    "npm",
    "yarn",
    "pnpm",
    "view",
    "client",
    "dependencies",
    "node_modules",
    "packages",
    "installer",
    "manager"
  ],
  "main": "index.js",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "prepack": "npm run build",
    "dev:server": "ts-node-dev --files server/development.ts",
    "dev:client": "parcel client/index.html",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" ",
    "build:server": "tsc --project server/tsconfig.json",
    "build:client": "parcel build client/index.html --no-source-maps",
    "build": "rm -rf dist && npm run build:server && npm run build:client",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ignore-path=.gitignore",
    "lint:prettier": "prettier --check . --ignore-path=.gitignore",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:ts",
    "test": "env NODE_TEST=true tap --timeout=60 --bail --ts --files tests",
    "ci:test": "env NODE_TEST=true tap --branches=60 --functions=60 --lines=60 --statements=60 --timeout=160 --bail --ts --files tests",
    "test:dev": "env NODE_TEST=true tap --jobs=1 --timeout=60 --bail --ts --files tests/install-force.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/q-nick/npm-gui.git"
  },
  "author": "Paweł Stefański",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/q-nick/npm-gui/issues"
  },
  "bin": {
    "npm-gui": "index.js"
  },
  "homepage": "https://github.com/q-nick/npm-gui#readme",
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/rimraf": "^3.0.2",
    "@types/styled-components": "^5.1.21",
    "@types/supertest": "^2.0.11",
    "@types/tap": "^15.0.5",
    "concurrently": "^7.0.0",
    "eslint-config-turbocharge": "^0.1.8",
    "fs-extra": "^10.0.0",
    "open-iconic": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "styled-components": "^5.3.3",
    "supertest": "^6.2.2",
    "tap": "^15.1.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "open": "^8.4.0",
    "parcel": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 1.0.0"
  }
}
